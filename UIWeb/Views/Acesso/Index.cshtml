@model UIWeb.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Index";
}

<h4>Acesso</h4>

<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Index">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="vwUsuario" class="control-label"></label>
				<input asp-for="vwUsuario" class="form-control" />
				<span asp-validation-for="vwUsuario" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="vwSenha" class="control-label"></label>
				<input asp-for="vwSenha" class="form-control" />
				<span asp-validation-for="vwSenha" class="text-danger"></span>
			</div>

			@*<div class="form-group">
				<label asp-for="vwUrlRetorno" class="control-label"></label>
				<input asp-for="vwUrlRetorno" class="form-control" />
				<span asp-validation-for="vwUrlRetorno" class="text-danger"></span>
			</div>*@
			
			@Html.HiddenFor(m=>m.vwUrlRetorno)

			<div class="form-group">
				<input type="submit" value="Acessar" class="btn btn-primary" />
			</div>

			@if (ViewBag.Message != null)
			{
				<div class="alert alert-warning">@ViewBag.Message</div>
			}

			<hr />
			<a class="nav-link text-dark" asp-area="" asp-controller="Acesso" asp-action="Create">Criar conta</a>
		</form>
	</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
